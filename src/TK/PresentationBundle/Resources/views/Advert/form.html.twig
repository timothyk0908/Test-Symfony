{# src/OC/PlatformBundle/Resources/views/Advert/form.html.twig #}

<h3>Formulaire d'annonce</h3>

<div class="well">
  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    {# Les erreurs générales du formulaire. #}
    {{ form_errors(form) }}

    <div class="form-group">
      {# Génération du label. #}
      {{ form_label(form.title, "Titre de l'annonce", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

      {# Affichage des erreurs pour ce champ précis. #}
      {{ form_errors(form.title) }}

      <div class="col-sm-4">
        {# Génération de l'input. #}
        {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>

    {# Idem pour un autre champ. #}
    <div class="form-group">
      {{ form_label(form.content, "Contenu de l'annonce", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      {{ form_errors(form.title) }}
      <div class="col-sm-4">
        {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>


   <div class="form-group">
  {{ form_label(form.date, "Date de l'annonce", {'label_attr': {'class' : 'col-sm-3 control-label'}}) }}
  {{ form_errors(form.date) }}
  	<div class="col-sm-4">
  		{{ form_widget(form.date, {'attr': {'class' : 'form-control'}})  }}
  	</div>
  </div>


     <div class="form-group">
  {{ form_label(form.author, "Auteur de l'annonce", {'label_attr': {'class' : 'col-sm-3 control-label'}}) }}
  {{ form_errors(form.author) }}
  	<div class="col-sm-4">
  		{{ form_widget(form.author, {'attr': {'class' : 'form-control'}})  }}
  	</div>
  </div>


     <div class="form-group">
  {{ form_label(form.published, "Publication de l'annonce", {'label_attr': {'class' : 'col-sm-3 control-label'}}) }}
  {{ form_errors(form.published) }}
  	<div class="col-sm-4">
  		{{ form_widget(form.published, {'attr': {'class' : 'form-control'}})  }}
  	</div>
  </div>

       <div class="form-group">
  {{ form_label(form.image.url, "URL de l'image", {'label_attr': {'class' : 'col-sm-3 control-label'}}) }}
  {{ form_errors(form.image.url) }}
  	<div class="col-sm-4">
  		{{ form_widget(form.image.url, {'attr': {'class' : 'form-control'}})  }}
  	</div>
  </div>

         <div class="form-group">
  {{ form_label(form.image.alt, "Description de l'image", {'label_attr': {'class' : 'col-sm-3 control-label'}}) }}
  {{ form_errors(form.image.alt) }}
  	<div class="col-sm-4">
  		{{ form_widget(form.image.alt, {'attr': {'class' : 'form-control'}})  }}
  	</div>
  </div>


  <div class="col-sm-4">
  {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
  </div>


  {# Génération automatique des champs pas encore écrits.
     Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
     et tous les champs cachés (type « hidden »). #}
  {{ form_rest(form) }}
  
  {# Fermeture de la balise <form> du formulaire HTML #}
  {{ form_end(form) }}
</div>